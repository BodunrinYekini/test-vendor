service vendor.aprd-default /vendor/bin/hw/vendor.sprd.hardware.aprd-service
    class hal
    user root
    group system

on property:persist.sys.apr.enabled=1
    start vendor.aprd-default

on property:persist.sys.apr.enabled=0
    stop vendor.aprd-default

on property:ro.bootmode=charger
    stop vendor.aprd-default

on property:ro.bootmode=cali
    stop vendor.aprd-default

on property:ro.bootmode=recovery
    stop vendor.aprd-default